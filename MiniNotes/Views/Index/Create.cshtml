@model User

<div class="row justify-content-center mt-2 mb-2">

    @if (TempData["CREATE_ERR_MSG"] != null)
    {
        <div class="col-12">
            <div class="alert alert-danger mt-5 alert-dismissible fade show" role="alert">
                <p>@TempData["CREATE_ERR_MSG"]</p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <p class="linha-cadastro"></p>
        </div>
    }

    <div class="col-12 mt-3">
        <h5 class="text-center title-cadastro">MiniNote - Todo List</h5>
        <h6 class="text-center title-cadastro">Create Account, Its Free!</h6>
    </div>

    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <input asp-for="@Model.Name" class="form-control" placeholder="Full Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.UserName" class="form-control" placeholder="User Name">
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Email" class="form-control" placeholder="Email Address">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Password" class="form-control" placeholder="Password">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="btn-group d-flex">
                <button type="submit" class="btn btn-primary">Create Account!</button>
                <button type="submit" class="btn btn-secondary ml-1" asp-action="Index">Cancel</button>
            </div>
        </form>
    </div>

</div>
